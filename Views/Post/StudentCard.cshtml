@model StudentCardModel
@{
    Layout = "__HomeLayout";
    ViewData["Title"] = "Staff or Student Card";
}
<h3 class="text-primary">Card Details</h3>
<hr />
<br />
<div class="alert alert-light">
    @ViewBag.Added
</div>
<br />
<form method="post" asp-action="StudentCard">
    <div class="card-body">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="FoundId" />
        <div class="form-group">
            <label asp-for="Suname" class="control-label"></label>
            <input asp-for="Suname" placeholder="Enter Surname" class="form-control" />
            <span asp-validation-for="Suname" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="StudentNo" class="control-label"></label>
            <input asp-for="StudentNo" placeholder="Staff No /Student Number" class="form-control" />
            <span asp-validation-for="StudentNo" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="iniatials" class="control-label"></label>
            <select asp-for="iniatials" class="form-control" asp-items="Html.GetEnumSelectList<IniatialModel>()">
                <option value="">Select</option>
            </select>
            <span asp-validation-for="iniatials" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="staffStudentModel" class="control-label"></label>
            <select asp-for="staffStudentModel" class="form-control" asp-items="Html.GetEnumSelectList<StaffStudentModel>()">
                <option value="">Select</option>
            </select>
            <span asp-validation-for="staffStudentModel" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CampusId" class="control-label"></label>
            <select asp-for="CampusId" class="form-control" asp-items=" ViewBag.CampusId">
               
            </select>
        </div>
        <div class="form-group">
            <button type="submit" style="width:auto" value="Submit" class="btn btn-primary">Submit</button>
        </div>
    </div>

</form>
