@model List<UserRoleViewModel>
@{
    ViewData["Title"] = "Roles";
    Layout = "__HomeLayout";
}
@{
    var RoleId = ViewBag.RoleId;
}
<form method="post" asp-action="AddUserToRole">
    <div class="card">
        <div class="card-header">
            <h2> Add or remove users from role</h2>
            <input disabled asp-for="@RoleId" />
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check" m-1>
                    <input type="hidden" asp-for="@Model[i].UserId" />
                    @*<input type="hidden" asp-for="@Model[i].RoleIdd" />*@
                    <input type="hidden" asp-for="@Model[i].UserName" />
                    <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model[i].IsSelected">
                        @Model[i].UserName
                    </label>
                </div>
            }
            @Model[0].RoleIdd=@RoleId

        </div>
        <div class="card-footer">
            <input asp-action="AddUserToRole" asp-route-RoleId="@RoleId" type="submit" value="update" class="btn btn-primary" style="width:auto" />
            <a asp-action="EditRole" asp-route-id="@RoleId" class="btn btn-primary" style="width:auto">Cancel</a>

        </div>


    </div>
</form>