@model ForgotPasswordResetViewModel

@{
    Layout = "__HomeLogin";
    ViewData["Title"] = "Rest Password";
}



<h4 class="card-header">Rest Passowrd</h4>
<hr />
@*<div class="row">*@
    <div class="card-body">
        <form asp-action="ForgotPasswordReset" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Email" hidden class="form-control" />

            <input asp-for="token" hidden class="form-control" />

            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" placeholder="Enter Password" class="form-control card" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="control-label"></label>
                <input asp-for="ConfirmPassword" placeholder="Confirm Password"  class="form-control card" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>

    </div>
@*</div>*@
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
