@model StatuseModel
@{
    Layout = "__HomeLayout";
    ViewData["Title"] = "Statsuse";
}
<h3 class="card-header">Found Statuse</h3>
<br />
<div class="card-title alert-heading">
    @ViewBag.Added
</div>
<form method="post" asp-action="FoundStatuse">
    <div class="card-body">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Statuse" class="control-label"></label>
            <input asp-for="Statuse" placeholder="Enter Catergory" class="form-control" />
            <span asp-validation-for="Statuse" class="text-danger"></span>
        </div>
        <div class="form-group">
            <button type="submit" style="width:auto" value="Submit" class="btn btn-primary">Submit</button>
        </div>
    </div>

</form>