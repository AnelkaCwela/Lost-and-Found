<body>

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" href="#">
                    <img src="~/Images/AboutChangeTheWorld.jpg" height="50" width="80" /> <span style="font-family:Bahnschrift, Arial; font-size:22px">Lost&Found</span>
                </a>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                @if (User.IsInRole("Admin") && (_signInManager.IsSignedIn(User)))
                {
                    <div class="text-center align-content-center alert alert-Info border">
                        Admin Panel
                    </div>
                }
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">

                    <ul class="navbar-nav ml-auto">


                        @if (_signInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <form method="post" asp-action="Logout" asp-controller="Account">
                                    <button type="submit" class="nav-link btn-link btn btn-light py-0" style="width:auto">
                                        Logout  @User.Identity.Name

                                    </button>
                                </form>
                            </li>

                        }



                    </ul>

                </div>


            </div>
        </nav>
    </header>




    @if (User.IsInRole("Admin") && (_signInManager.IsSignedIn(User)))
    {
        <div class="row justify-content-sm-around card-header">

            <div class="col-xs-3 col-s-2 d-sm-inline-flex flex-sm-row-reverse">
                <a class="btn-light btn  ml-auto btn-md btn-outline-secondary py-0" style="width:auto" asp-area="" asp-controller="Admin" asp-action="ListRole">Manage Roles</a>

            </div>
            <div class="col-xs-3 col-s-2 d-sm-inline-flex flex-sm-row-reverse">
                <a class="btn-light btn btn-md btn-outline-secondary py-0" style="width:auto" asp-area="" asp-controller="Post" asp-action="CreateLCategory">Create Lost Category</a>

            </div>
            <div class="col-xs-3 col-s-2 d-sm-inline-flex flex-sm-row-reverse">
                <a class="btn-light btn btn-md btn-outline-secondary py-0" style="width:auto" asp-area="" asp-controller="Post" asp-action="CreateFCategory">Create Found Category</a>

            </div>
            <div class="col-xs-3 col-s-2 d-sm-inline-flex flex-sm-row-reverse">
                <a class="btn-light btn  ml-auto btn-md btn-outline-secondary py-0" style="width:auto" asp-area="" asp-controller="Post" asp-action="LostHistory">Manage Lost</a>

            </div>
            <div class="col-xs-3 col-s-2 d-sm-inline-flex flex-sm-row-reverse">
                <a class="btn-light btn  ml-auto btn-md btn-outline-secondary py-0" style="width:auto" asp-area="" asp-controller="Post" asp-action="FoundHistory">Mange Found</a>

            </div>
            <div class="col-xs-3 col-s-2 d-sm-inline-flex flex-sm-row-reverse">
                <a class="btn-light btn  ml-auto btn-md btn-outline-secondary py-0" style="width:auto" asp-area="" asp-controller="Post" asp-action="AClaims">Manage Claims</a>

            </div>

        </div>
    }@if(_signInManager.IsSignedIn(User))
    {
        <div class="fixed-bottom justify-content-center" style="height:60px">
            <hr />
            <div class="col-lg-4 col-xl-4 col-md-4 col-sm-4 text-center d-inline justify-content-center">
                <a class="nav-link d-inline  text-center" asp-controller="Post" asp-action="Post">
                   Home
                    <span>
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-house-door-fill" viewBox="0 0 16 16">
                            <path d="M6.5 14.5v-3.505c0-.245.25-.495.5-.495h2c.25 0 .5.25.5.5v3.5a.5.5 0 0 0 .5.5h4a.5.5 0 0 0 .5-.5v-7a.5.5 0 0 0-.146-.354L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293L8.354 1.146a.5.5 0 0 0-.708 0l-6 6A.5.5 0 0 0 1.5 7.5v7a.5.5 0 0 0 .5.5h4a.5.5 0 0 0 .5-.5z" />
                        </svg>
                    </span>
                </a>
            </div>

            <div class="col-lg-4 col-xl-4 col-md-4 col-sm-4 text-center d-inline justify-content-center">
                <a class="nav-link d-inline  text-center" asp-controller="Post" asp-action="LostList">
                    Lost Post
                    <span>
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-app-indicator" viewBox="0 0 16 16">
                            <path d="M5.5 2A3.5 3.5 0 0 0 2 5.5v5A3.5 3.5 0 0 0 5.5 14h5a3.5 3.5 0 0 0 3.5-3.5V8a.5.5 0 0 1 1 0v2.5a4.5 4.5 0 0 1-4.5 4.5h-5A4.5 4.5 0 0 1 1 10.5v-5A4.5 4.5 0 0 1 5.5 1H8a.5.5 0 0 1 0 1H5.5z" />
                            <path d="M16 3a3 3 0 1 1-6 0 3 3 0 0 1 6 0z" />
                        </svg>
                    </span>
                </a>
            </div>

            <div class="col-lg-4 col-xl-4 col-md-4 col-sm-4 text-center d-inline justify-content-center">
                <a class="nav-link d-inline  text-center" asp-controller="Post" asp-action="FoundList">
                    Found Post
                    <span>
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-app" viewBox="0 0 16 16">
                            <path d="M11 2a3 3 0 0 1 3 3v6a3 3 0 0 1-3 3H5a3 3 0 0 1-3-3V5a3 3 0 0 1 3-3h6zM5 1a4 4 0 0 0-4 4v6a4 4 0 0 0 4 4h6a4 4 0 0 0 4-4V5a4 4 0 0 0-4-4H5z" />
                        </svg>
                    </span>
                </a>
            </div>
            <div class="col-lg-4 col-xl-4 col-md-4 col-sm-4 text-center d-inline justify-content-center">
                <a class="nav-link d-inline  text-center" asp-controller="Post" asp-action="Index">
                    Create Post
                    <span>
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-circle" viewBox="0 0 16 16">
                            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                            <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                        </svg>
                    </span>
                </a>
            </div>



        </div>
    }

    <br />
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
